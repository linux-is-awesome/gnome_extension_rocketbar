#!/bin/bash

cd ./extension

gnome-extensions pack --force\
                      --podir=locale ./\
                      --extra-source ../LICENSE\
                      --extra-source assets/\
                      --extra-source ui/\
                      --extra-source services/\
                      --extra-source utils/\
                      --extra-source core/\
                      --extra-source settings/\
                      --out-dir ../